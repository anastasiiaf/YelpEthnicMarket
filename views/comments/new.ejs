<%- include("../partials/header") %>
<div class="container">
  <h1 style="text-align: center;">Add new comment to <%= market.name%></h1>
  <div class="row">
    <div style="width: 30%; margin: 40px auto;">
      <form action="/market/<%= market._id%>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id="" placeholder="text" />
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/market">Go back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
