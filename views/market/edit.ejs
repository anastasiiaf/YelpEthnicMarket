<%- include("../partials/header") %>
<div class="container">
  <h1 style="text-align: center;">Edit <%= market.name%></h1>
  <div class="row">
    <div style="width: 30%; margin: 40px auto;">
      <form action="/market/<%= market._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="market[name]"
            id=""
            value="<%= market.name%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="market[image]"
            id=""
            value="<%= market.image%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="market[description]"
            id=""
            value="<%= market.description%>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/market">Go back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
